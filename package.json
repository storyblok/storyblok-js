{
  "name": "@storyblok/js-workspace",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "./lib",
    "./playground",
    "./playground-vue"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=lib & npm run demo",
    "demo": "npm run demo --workspace=playground",
    "demo-vue": "npm run demo --workspace=playground-vue",
    "build": "npm run build --workspace=lib",
    "test:unit": "npm run test:unit --workspace=lib",
    "test:e2e": "npm run test:e2e --workspace=lib",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@tsconfig/recommended": "^1.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.{vue,svelte,js,jsx,css,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "ignorePatterns": "dist/",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
